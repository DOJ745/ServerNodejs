extends ../basic_layout

block content

    h1 Difficulties
    .card-deck
        each _difficulty in list
            .card.text-white.bg-secondary.mb-3
                .card-body
                    h5.card-title Difficulty params
                    p.card-text= "ID: " + _difficulty._id
                    p.card-text= "Name: " + _difficulty.name
                    p.card-text= "Multiplier: " + _difficulty.multiplier
                    a.btn.btn-primary(href='/db/update/difficulty') Update
                    a.btn.btn-danger(href='/db/delete/difficulty') Delete