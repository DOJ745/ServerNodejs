extends basic_layout

block content
    form(action="./testPOST" method="POST")
        label(for="name") Name:
        input(
            type="text"
            id="name"
            name="name"
        )

        label(for="email") Email:
        input(
            type="email"
            id="email"
            name="email"
        )

        input(type="submit" value="Submit")