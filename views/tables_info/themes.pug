extends ../basic_layout

block content

    h1 Themes
    .card-deck
        each _theme in list
            .card.text-white.bg-secondary.mb-3
                .card-body
                    h5.card-title Theme params
                    p.card-text= "ID: " + _theme.id
                    p.card-text= "Name: " + _theme.name
                    button.btn.btn-primary(
                        type='button'
                        data-toggle='modal'
                        data-target='#updateModal' + _theme.id
                        data-whatever="test1") Update
                    button.btn.btn-danger(
                        type='button'
                        data-toggle='modal'
                        data-target='#deleteModal'
                        data-whatever="test2") Delete
            div.modal.fade(
                tabindex='-1'
                role='dialog'
                aria-labelledby='exampleModalLabel'
                aria-hidden='true'
                id='updateModal' + _theme.id)
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            h5.modal-title Menu
                            button.close(type='button' data-dismiss='modal' aria-label='Close')
                                span(aria-hidden='true') &times;
                        .modal-body
                            form(action="/db" method="GET")
                                label.col-form-label= "Theme ID: " + _theme.id
                                br
                                label.col-form-label Input new name:
                                input.form-control(type='text' value= "New name" name="updTheme")
                                .modal-footer
                                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                                    input(type="submit" value="Update" class="btn btn-primary")






