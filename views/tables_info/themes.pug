extends ../basic_layout

block content

    h1 Themes
    .card-deck
        each _theme in list
            .card.text-white.bg-secondary.mb-3
                .card-body
                    h5.card-title Theme params
                    p.card-text= "ID: " + _theme.id
                    p.card-text= "Name: " + _theme.name
                    a.btn.btn-primary(href='/db/update/theme') Update
                    a.btn.btn-danger(href='/db/delete/theme') Delete

